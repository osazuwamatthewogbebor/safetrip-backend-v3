<%- include('includes/header.ejs', { subject: 'Password Reset Request' }) %>

<div style="padding: 25px; font-family: 'Inter', 'Segoe UI', sans-serif; line-height: 1.6; max-width: 600px; margin: 0 auto;">

  <p style="font-size: 16px;">Hi <strong><%= user %></strong>,</p>

  <p style="font-size: 15px; color: #555;">
    We received a request to reset your SafeTrip account password. Please use the verification code below to proceed:
  </p>

  <div style="background: #fff; border: 1px solid #e4e6eb; border-radius: 12px; padding: 16px; width: fit-content; margin: 20px auto; text-align: center;">
    <h2 style="margin: 0; color: #3ab795; font-size: 32px; letter-spacing: 2px;"><%= otp %></h2>
  </div>

  <p style="font-size: 14px; color: #777; text-align: center; margin-bottom: 12px;">
    This code will expire in <%= otpTimeMins %> minutes. For your security, do not share this code with anyone.
  </p>

  <p style="font-size: 14px; color: #555;">
    If you did not request a password reset, you can safely ignore this email.
  </p>

</div>

<%- include('includes/footer.ejs') %>